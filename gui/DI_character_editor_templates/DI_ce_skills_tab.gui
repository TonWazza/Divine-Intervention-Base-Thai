								button_plus_small = {
									name = "increase_skill"
									parentanchor = center
									alwaystransparent = yes
								}
							}
						}

						# Intrigue Button
						hbox = {
							layoutpolicy_horizontal = expanding
							spacing = 5
		
							button_standard = {
								name = "DI_intrigue_button"
								layoutpolicy_horizontal = expanding
