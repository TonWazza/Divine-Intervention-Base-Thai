                            button_ignore = none
                            tooltip = "DI_skill_diplomacy_tt"
                            using = tooltip_ne
                            size = { 130 40}

                            icon = {
                                parentanchor = left|vcenter
                                size = { 40 40 }
                                texture = "gfx/interface/icons/DI_skills_diplomacy.dds"
                            }

                            vbox = {
                                margin_left = 45
        
                                text_single = {
                                    name = "skill_name"
                                    layoutpolicy_horizontal = expanding
                                    text = diplomacy
                                    autoresize = no
                                }
                            }
                        }
    
